<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
    <div class="signform">
      <h2>
        <i class="fa fa-building-o"></i> Update store
      </h2>
    </div>
    <%= form_for(@store) do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :number, "Phone Number" %>
        <%= f.text_field :number, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :hours %>
        <%= f.text_field :hours, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :gmap, "Google Map" %>
        <%= f.text_area :gmap, class: "form-control", rows: "6" %>
      </div>

      <button type="submit" 
              class="btn btn-primary">
           <i class="fa fa-save"></i> 
            Update store
      </button>
    <% end %>
  </div>
</div>