    </div>
  </div>
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>
          Links <small>Appears on contact page</small>
          <%= link_to new_link_path, class: "pull-right btn btn-primary" do %>
            <i class="fa fa-plus"></i>
            New link
          <% end %>
        </h2>
      </div>
      <div class="panel-body">
        <% @links.each do |l| %>
